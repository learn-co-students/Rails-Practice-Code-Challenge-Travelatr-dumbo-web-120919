<h1>Create New Blogger:</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <h5><%= error %></h5>
  <% end %>
<% end %>

<%= form_for @blogger do |f| %>

  <%= f.label :name, "Enter Name:" %> <br>
  <%= f.text_field :name %> <br>

  <%= f.label :age, "Enter Age:" %> <br>
  <%= f.number_field :age %> <br>

  <%= f.label :bio, "Enter a Bio:"%> <br>
  <%= f.text_area :bio %> <br>

  <%= f.submit %>

<% end %>