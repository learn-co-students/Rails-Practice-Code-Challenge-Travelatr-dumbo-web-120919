<h1>Create a Post</h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |msg| %>
    <h2><%= msg%></h2>
  <% end %>
<% end %>

<%= form_for @post do |f| %>
  <%= f.label :blogger_id, 'Select a Blogger Account:' %> <br/>
  <%= f.collection_select :blogger_id, @bloggers, :id, :name, include_blank: "Select a Blogger" %> 
  
  <br/><br/>

  <%= f.label :destination_id, 'Select a Destination:' %> <br/>
  <%= f.collection_select :destination_id, @destinations, :id, :name, include_blank: "Select a Destination" %>
  
  <br/><br/>

  <%= f.label :title, 'Enter a Title for your Post:' %> <br/>
  <%= f.text_field :title %>

  <br/><br/>

  <%= f.label :content, 'Enter the content of your Post:' %> <br/>
  <%= f.text_area :content %>

  <br/><br/>

  <%= f.submit %>

<% end %>